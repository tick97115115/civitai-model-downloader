// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite3"
}

generator client {
  provider = "prisma-client-js"
  output   = "./src/prisma/generated"
}

model Model {
  id            Int            @id
  name          String
  creator       String?
  type          String
  nsfw          Boolean
  nsfwLevel     Int
  modelVersions ModelVersion[]
  tags          Tag[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([name, type, creator, nsfw, nsfwLevel])
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  models Model[]

  @@index([name])
}

model ModelVersion {
  id            Int       @id
  modelId       Int
  name          String
  baseModel     String
  baseModelType String?
  publishedAt   DateTime?
  nsfwLevel     Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  model Model @relation(fields: [modelId], references: [id])

  @@index([modelId, name, baseModel, baseModelType, publishedAt, nsfwLevel])
}
