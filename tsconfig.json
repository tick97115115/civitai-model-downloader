{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@server/*": ["server/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
